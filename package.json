{
  "name": "paketpilot",
  "version": "1.0.0",
  "description": "PaketPilot Sipariş Yönetimi",
  "author": "Musluhan Cavus",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run watch:css\" \"npm run electron\"",
    "watch:css": "tailwindcss -i input.css -o output.css --watch",
    "electron": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.musluhan.paketpilot",
    "productName": "PaketPilot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*",
      "!input.css",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "logo.jpeg"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "logo.jpeg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "electron-log": "^5.4.3",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^3.4.0"
  }
}